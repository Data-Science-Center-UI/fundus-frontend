<table class="table">
    <thead class="table__header">
        <tr>
            <th>Diagnosis</th>
            <th>Status</th>
            <th>Probability</th>
        </tr>
    </thead>
    <tbody class="table__body" data-controller="partials--result-table">
        <% ApplicationHelper::DIAGNOSIS.each do |diagnosis| %>
            <%#
                Get Probability data which is located at Index 1
                Probability used for colorize rows
                Color changes are handled by StimulusJS
            %>
            <tr
                class="table__row"
                data-partials--result-table-target="resultTableRow"
                data-probability=<%= result[diagnosis][1].present? ? result[diagnosis][1].to_f : '' %>
            >
                <td><%= diagnosis.to_s.humanize.upcase %></td>
                <% result[diagnosis].each do |data| %><td><%= data %></td><% end %>
            </tr>
        <% end %>
    </tbody>
</table>